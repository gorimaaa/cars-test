
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="bg-white shadow-lg rounded-lg p-6 max-w-lg mx-auto">
    
    <!-- Afficher les messages d'erreurs -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Champ Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Champ Mot de passe -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(min: <%= @minimum_password_length %> caract√®res)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Champ Confirmation du mot de passe -->
    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-lg font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Bouton d'inscription -->
    <div class="flex justify-center mb-4">
      <%= f.submit "Sign up", class: "bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
